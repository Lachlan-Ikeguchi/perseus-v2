<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>i2c_imu_driver</name>
  <version>0.0.1</version>
  <description>ROS 2 package for I2C IMU sensor driver. Provides direct I2C communication with IMU sensors connected to the host system's I2C bus, publishes sensor_msgs/Imu messages, and integrates with hardware_interface for optional sensor support.</description>
  <maintainer email="1388693+DingoOz@users.noreply.github.com">DingoOz</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>fd-wrapper</depend>
  <depend>rclcpp</depend>
  <depend>rclcpp_lifecycle</depend>
  <depend>hardware_interface</depend>
  <depend>backward_ros</depend>
  <depend>sensor_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>tf2</depend>
  <depend>tf2_geometry_msgs</depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>